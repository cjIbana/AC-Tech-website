@model List<string>

@{
    ViewData["Title"] = "PROJECTS";
}

<div class="container my-3 about-us-container">
    <div class="container mt-5 mb-5">
        <div class="row">
            <div class="col-md-12 text-center">
                <h1 class="font-weight-bold mb-4">PROJECTS</h1>
            </div>

            @for (int i = 0; i < Model.Count; i += 2)
            {
                <div class="row mb-4">
                    <div class="col-md-6 text-center">
                        <div class="image-container-projects slide-in-left">
                            <img src="~/assets/Projects_Images/@Model[i]" alt="Project Image" class="img-fluid w-50 d-block mx-auto">
                        </div>
                    </div>
                    
                    @if (i + 1 < Model.Count)
                    {
                        <div class="col-md-6 text-center">
                            <div class="image-container-projects slide-in-right">
                                <img src="~/assets/Projects_Images/@Model[i + 1]" alt="Project Image" class="img-fluid w-50 d-block mx-auto">
                            </div>
                        </div>
                    }
                </div>
                <hr class="my-4" />
            }
        </div>
    </div>
</div>
